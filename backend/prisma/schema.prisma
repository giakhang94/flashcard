generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}
enum Level {
  N1
  N2
  N3
  N4
  N5
}

enum Difficulty {
  easy
  medium
  hard
}
model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  role  Role @default(user)
  isAllow Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  }

model Card {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  hiragana String @unique
  katakana String @unique
  kanji String? 
  romaji String
  meaning String
  example String?
  lesson Int
  level Level
  difficulty Difficulty @default(medium)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  hint String?
}